{% extends 'layout/main.twig' %}

{% block content %}
    <div class="uk-section uk-padding-remove-vertical">
        <div class="uk-container uk-container-expand">

            {% if is_valid_token %}
            <h1 class="uk-text-center uk-medium-small uk-margin-medium-top uk-text-primary">Set password</h1>

            <div class="uk-grid-large uk-flex-center uk-margin-remove" uk-grid>
                <div class="uk-width-1-1 uk-width-1-2@s uk-width-1-3@m uk-card uk-card-default uk-padding uk-padding-remove-top">

                    <form method="POST" role="form">
                        {{ csrf_tokens() | raw }}
                        {{ formHidden(form.get('token')) }}
                        <div class="uk-margin">
                            {{ formRow(form.get('password')) }}
                        </div>
                        <div class="uk-margin">
                            {{ formRow(form.get('repassword')) }}
                        </div>

                        {{ formRow(form.get('submit')) }}
                    </form>

                </div>
            </div>

            {% else %}
                <h2 class="uk-text-center uk-medium-small uk-margin-medium-top uk-text-primary">Your token is invalid!</h2>
            {% endif %}

        </div>
    </div>
{% endblock %}
